@model Inspinia_MVC5_SeedProject.Models.Question
@{
    ViewBag.Title = "Create";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Create</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="ibox-content">
                <form id="form" method="post" action="/Forum/create">
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label col-md-2">Choose category</label>
                            <div class="col-md-10">
                                <select class="form-control" name="category" form="form">
                                    <option>Electronics</option>
                                    <option>Vehicles</option>
                                    <option>RealEstate</option>
                                    <option>Jobs</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label col-md-2">Choose subcategory</label>
                            <div class="col-md-10">
                                <select class="form-control" name="subcategory" form="form">
                                    <option>Mobiles</option>
                                    <option>Vehicles</option>
                                    <option>RealEstate</option>
                                    <option>Jobs</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label col-md-2">Title</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="title" />
                            </div>
                        </div>
                        </div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label col-md-2">Description</label>
                            <div class="col-md-10">
                                <textarea class="form-control" rows="7" name="description"></textarea>
                            </div>
                        </div>
                    </div>
                    <br />
                        <div class="form-group col-md-offset-2">
                            <input type="submit" class="btn btn-info" />
                        </div>
                    
</form>
            </div>
        </div>
    </div>
 </div>

 @section Styles {

    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/Scripts/plugins/jquery-ui/jqueryuiStyles")
    <link href="~/Scripts/plugins/selectize/selectize.css" rel="stylesheet" />
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/toastr")
    <script src="~/Scripts/plugins/selectize/selectize.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            var error = $("#tempdataError").val();
            if (error != "") {
                toastr.info(error, "Oops!");
            }
            
            $("#form").validate({
                rules: {
                    title: {
                        required: true,
                        maxlength: 100,
                        minlength: 10
                    },
                    description: {
                        required: true,
                        minlength: 20,
                        maxlength: 1000
                    }
                }
            });
        });
    </script>
}


