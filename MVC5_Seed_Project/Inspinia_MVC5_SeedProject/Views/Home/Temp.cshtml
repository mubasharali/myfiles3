<div id="AccountViewModel">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#inputEmail">
        Input Email
    </button>
    <div class="modal inmodal fade" id="inputEmail" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content animated ">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <i class="fa fa-laptop modal-icon"></i>
                    <h4 class="modal-title">Welcome to logo.com</h4>
                    <small class="font-bold" data-bind="text:email">Trusted website for buying and selling</small>
                </div>
                <div class="modal-body">
                    <div class="form-group"><label>Enter Email</label> <input type="email" data-bind="value:email" placeholder="Enter your email" class="form-control"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                    <button type="button" data-bind="click:submitEmail" class="btn btn-primary">Submit</button>
                </div>
            </div>

        </div>
    </div>
    <div class="modal inmodal fade" id="newUser" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content animated ">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <i class="fa fa-laptop modal-icon"></i>
                    <h4 class="modal-title">Welcome to logo.com</h4>
                    <small class="font-bold">Trusted website for buying and selling</small>
                </div>
                <div class="modal-body">
                    <p>Thanks for joining logo</p>
                    <div class="form-group"><label>Enter Password</label> <input type="password" data-bind="value:password" placeholder="Enter Password" class="form-control"></div>
                    <div class="form-group"><label>Confirm Password</label> <input type="password" data-bind="value:confirmPassword" placeholder="Again Enter your Password" class="form-control"></div>
                    Do it later
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Submit</button>
                </div>

            </div>
        </div>
    </div>

    <div class="modal inmodal fade" id="oldUser" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content animated ">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <i class="fa fa-laptop modal-icon"></i>
                    <h4 class="modal-title">Welcome Back <span data-bind="text:name"></span> !</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group"><label>Enter Password</label> <input type="password" data-bind="value:password" placeholder="Enter your Password" class="form-control"></div>
                    <p data-bind="text:error"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                    <button type="button" data-bind="click:checkLoginUserPassword" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/timeago")
    @Scripts.Render("~/plugins/autosize")
    @Scripts.Render("~/plugins/knockout")
<script>
    function AccountViewModel() {
        var self = this;
        self.email = ko.observable("abc");
        self.password = ko.observable();
        self.confirmPassword = ko.observable();
        self.isEmailTaken = ko.observable(false);
        self.isNewUser = ko.observable(false);
        self.isOldUser = ko.observable(false);
        self.error = ko.observable();
        self.submitEmail = function () {
            $.ajax({
                url: '/api/User/CheckEmail?email=' + self.email(),
                dataType: "json",
                contentType: "application/json",
                cache: false,
                type: 'POST',
                success: function (data) {
                    $("#inputEmail").modal('hide');
                    if (data == "NewUser") {
                        $("#newUser").modal('show');
                    } else {
                        $("#oldUser").modal('show');
                    }
                },
                error: function () {
                    self.error("failed to send Email. Please refresh page and try again", "Error!");
                }
            });
        }
        self.checkLoginUserPassword = function () {
            $.ajax({
                url: '/api/User/CheckLoginUserPassword?email='+self.email() + '&password=' + self.password(),
                dataType: "json",
                contentType: "application/json",
                cache: false,
                type: 'POST',
               // data: { email: self.email(), password: self.password() },
                success: function (data) {
                    if (data == "OK") {
                        self.isEmailTaken(false);
                        self.isNewUser(false);
                        self.isOldUser(false);

                        location.reload();
                    } else {
                        self.error("Incorrect password");
                    }
                },
                error: function () {
                    self.error("failed to send password. Please refresh page and try again", "Error!");
                }
            });
        }
    }
    $(function () {
        ko.applyBindings(new AccountViewModel());

    })
</script>
}